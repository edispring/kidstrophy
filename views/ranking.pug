extends layout

mixin result(rank,i)
  td
    strong(class= rank['points' + i] === 1000 ? 'text-success' : '')= rank['points' + i]
    | &nbsp;
    em= rank['stage' + i]

block content
  .container
    if error
      .alert.alert-danger
        strong Error
        span &nbsp;&nbsp;
        span= error

    .container
      if resultsPerCategory
        each category in categories
          if parseInt(category, 10) >= 0
            h4= categories[category]
            table.table
              tr
                th Rank
                th Name
                th 1. Surfboard
                th 2. Bowling
                th 3. Parcours
                th 4. Weitwurf
                th 5. Sprint
                th 6. Korbball
                th Points Overall
              if resultsPerCategory[+category]
                each rank, i in resultsPerCategory[+category]
                  tr
                    td= (i + 1)
                    td
                      a(href='/' +rank.id)= rank.firstName + ' ' + rank.lastName
                    +result(rank, 1)
                    +result(rank, 2)
                    +result(rank, 3)
                    +result(rank, 4)
                    +result(rank, 5)
                    +result(rank, 6)
                    +result(rank, '')
