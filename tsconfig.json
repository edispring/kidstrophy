{
  "version": "2.2.2",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "watch": false,
    "lib": ["dom", "es2017", "es2017.object", "es2017.sharedmemory"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "typings/browser"],
  "filesGlob": ["./**/*.ts", "!./node_modules/**/*.ts"],
  "atom": {
    "rewriteTsconfig": false
  }
}
